extends layout

block content
  h1 #{category.name}
  h1 Category: #{category.name}
  p #{category.description}

  div(style='margin-left:20px; margin-top:20px')
    h4 Items

    ul
      each item in category_items
        li
          a(href=item.url) #{item.name}
          p= item.description

    hr
    p
    a(href=category.url+'/delete') Delete Categoty
